public class AnswerManager : MonoBehaviour
{
    public InputField answerInput; // Input pole na zadanie odpovede
    public Button submitButton; // TlaÄidlo na potvrdenie
    private string[] correctAnswers = { "hrebeÅˆ", "HrebeÅˆ", "HREBEÅ‡", "hrebienok" };

